{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:8899",
    "distDir": "../out"
  },
  "package": {
    "productName": "Ophiuchi",
    "version": "0.2.3"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "path": {
        "all": true
      },
      "dialog": {
        "all": false,
        "ask": false,
        "confirm": true,
        "message": true,
        "open": false,
        "save": false
      },
      "fs": {
        "scope": [
          "$APPDATA/",
          "$APPDATA/*",
          "$APPDATA/**",
          "$RESOURCE/**"
        ],
        "readDir": true,
        "createDir": true,
        "exists": true,
        "writeFile": true,
        "copyFile": true,
        "readFile": true,
        "removeDir": true,
        "removeFile": true
      },
      "shell": {
        "open": "/**/*",
        "execute": true,
        "scope": [
          {
            "name": "run-docker-compose",
            "cmd": "docker",
            "args": true
          },
          {
            "name": "stop-docker-compose",
            "cmd": "docker",
            "args": true
          },
          {
            "name": "check-docker-container-exists",
            "cmd": "docker",
            "args": true
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "dev.ophiuchi.desktop",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [
        "bundle/templates/**/*"
      ],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 1000,
        "resizable": true,
        "title": "Ophiuchi",
        "width": 1200,
        "minWidth": 1024,
        "minHeight": 768
      }
    ]
  }
}